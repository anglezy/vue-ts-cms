# https://editorconfig.org

root = true

[*] #表示所有文件可用
charset = utf-8 #设置的文件字符集
indent_style = space # 缩进风格 （tab | space）
indent_size = 2 #缩进大小
end_of_line = lf #控制换行类型（lr | cr | crlf）
insert_final_newline = true #始终在文件末尾插入新的一行
trim_trailing_whitespace = true #去除行首的任意空白符

[*.md] #表示仅.md文件适用一下规则
insert_final_newline = false
trim_trailing_whitespace = false